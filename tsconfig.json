{
	"compilerOptions": {
		"target": "ES2019",
		"module": "commonjs",
		"lib": ["es2019"],
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": ".",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"include": ["credentials/**/*", "nodes/**/*"],
	"exclude": ["node_modules", "dist"]
}
